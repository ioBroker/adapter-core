    "mocha": "^9.2.0",
    "prettier": "^2.5.1",
    "proxyquire": "^2.1.0",
    "rimraf": "^3.0.0",
    "sinon": "^13.0.0",
    "sinon-chai": "^3.7.0",
    "source-map-support": "^0.5.21",
    "ts-node": "^10.4.0",
    "typescript": "^4.5.5"
