{
	"compileOnSave": true,
	"compilerOptions": {
		"noEmit": true,
		"noEmitOnError": true,
		"module": "ESNext",
		"moduleResolution": "node",
		"outDir": "build/esm",
		"removeComments": false,
		"strict": true,
		"sourceMap": false,
		"inlineSourceMap": false,
	},
	"include": [
		"**/*.ts"
	],
	"exclude": [
		"build/**",
		"node_modules/**"
	]
}
